    <script>
        // –ì–ª–∞–¥–∫–∞—è –ø—Ä–æ–∫—Ä—É—Ç–∫–∞ –ø–æ —è–∫–æ—Ä—è–º
        document.querySelectorAll('a[href^="#"]').forEach(link => {
            link.addEventListener('click', (e) => {
                const href = link.getAttribute('href');
                if (href !== '#' && document.querySelector(href)) {
                    e.preventDefault();
                    document.querySelector(href).scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ñ–æ—Ä–º—ã
        function handleFormSubmit(event) {
            event.preventDefault();
            const form = event.target;
            const formData = new FormData(form);
            
            // –û—Ç–ø—Ä–∞–≤–∏—Ç—å –Ω–∞ Telegram, Email –∏–ª–∏ –¥—Ä—É–≥–æ–π —Å–µ—Ä–≤–∏—Å
            const message = `
–ù–æ–≤–∞—è –∑–∞—è–≤–∫–∞ —Å —Å–∞–π—Ç–∞ Label Group:

–ö–æ–º–ø–∞–Ω–∏—è: ${formData.get('company')}
–ö–æ–Ω—Ç–∞–∫—Ç–Ω–æ–µ –ª–∏—Ü–æ: ${formData.get('contact')}
–¢–µ–ª–µ—Ñ–æ–Ω: ${formData.get('phone')}
Email: ${formData.get('email')}
–ó–∞–¥–∞—á–∞: ${formData.get('message')}
            `;

            // –ê–ª—å—Ç–µ—Ä–Ω–∞—Ç–∏–≤–∞: –æ—Ç–ø—Ä–∞–≤–∏—Ç—å –ø–∏—Å—å–º–æ —á–µ—Ä–µ–∑ email (—Ç—Ä–µ–±—É–µ—Ç –±—ç–∫–µ–Ω–¥–∞)
            console.log(message);
            
            // –ü–æ–∫–∞–∑–∞—Ç—å –±–ª–∞–≥–æ–¥–∞—Ä–Ω–æ—Å—Ç—å
            alert('‚úì –°–ø–∞—Å–∏–±–æ! –í–∞—à–∞ –∑–∞—è–≤–∫–∞ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞. –ú–µ–Ω–µ–¥–∂–µ—Ä —Å–≤—è–∂–µ—Ç—Å—è —Å –≤–∞–º–∏ –≤ —Ç–µ—á–µ–Ω–∏–µ 2 —á–∞—Å–æ–≤.');
            form.reset();
        }
    </script>
